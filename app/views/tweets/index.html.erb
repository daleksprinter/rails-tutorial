<style>
    .add_url{
        text-align: right;
    }
    .tweet_link{
        text-decoration: none;
    }
</style>


<div class = 'add_url'>
    <%= form_with url: tweets_path do |form| %>
        <%= form.text_field :tweet_url%>
        <%= form.submit %>
    <% end %>
</div>

<% @tweets.each do |tweet| %>
    <%= link_to tweet_path(tweet[:tweet_model]), class:"tweet_link" do %>
    <div class = 'tweet_list'>
        <div class = 'tweet_data'>
            <%= tweet[:tweet_model].user %><br>
            <%= tweet[:tweet_object].text %> 
        </div>
        <div class = 'like-button'>
            <%= tweet[:tweet_model].good %> いいね 
        </div>
    </div>
    <% end %>
<% end %>
